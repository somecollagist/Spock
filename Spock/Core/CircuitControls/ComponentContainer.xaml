<UserControl x:Class="Spock.Core.CircuitControls.ComponentContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spock.Core.CircuitControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <Grid>
		<ComboBox x:Name="ComponentPicker" SelectionChanged="ComponentPicked">
			<ComboBoxItem>NOT</ComboBoxItem>
			<ComboBoxItem>AND</ComboBoxItem>
			<ComboBoxItem>OR</ComboBoxItem>
			<ComboBoxItem>XOR</ComboBoxItem>
			<ComboBoxItem>Input</ComboBoxItem>
		</ComboBox>
		<Grid x:Name="ComponentSpace" Visibility="Collapsed">
			<Button
				Content="x"
				Height="10"
				Width="10"
				FontSize="8"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Click="DeleteComponent"/>
			<Grid x:Name="ComponentHolder">
				<local:AND></local:AND>
			</Grid>
		</Grid>	
	</Grid>
</UserControl>
